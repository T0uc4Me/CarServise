<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/admin.css" />
    <title>Детали заказа</title>
  </head>
  <body>
    <header>
      <div class="header-container">
        <h1>Детали заказа №<%= servis_orders.order_id %></h1>
        <div class="user-controls">
          <a href="/admin" class="back-button">Назад</a>
          <button id="exit">
            <a href="/"><h1>выход</h1></a>
          </button>
        </div>
      </div>
    </header>

    <main class="admin-main">
      <div class="order-details">
        <div class="order-info">
          <h2>Информация о заказе</h2>
          <table class="details-table">
            <tr>
              <th>Статус заказа:</th>
              <td><%= servis_orders.order_status %></td>
            </tr>
            <tr>
              <th>Дата создания:</th>
              <td><%= servis_orders.servis_data %></td>
            </tr>
            <tr>
              <th>Стоимость работ:</th>
              <td><%= servis_orders.total_amount %> ₽</td>
            </tr>
          </table>
        </div>

        <div class="client-info">
          <h2>Информация о клиенте</h2>
          <table class="details-table">
            <tr>
              <th>Имя:</th>
              <td><%= customer.FIO %></td>
            </tr>
            <tr>
              <th>Телефон:</th>
              <td><%= customer.phone %></td>
            </tr>
            <tr>
              <th>Email:</th>
              <td><%= customer.email %></td>
            </tr>
          </table>
        </div>

        <div class="car-info">
          <h2>Информация об автомобиле</h2>
          <table class="details-table">
            <tr>
              <th>Марка:</th>
              <td><%= car.mark %></td>
            </tr>
            <tr>
              <th>Модель:</th>
              <td><%= car.model %></td>
            </tr>
            <tr>
              <th>Год выпуска:</th>
              <td><%= car.year %></td>
            </tr>
            <tr>
              <th>VIN:</th>
              <td><%= car.wincode %></td>
            </tr>
          </table>
        </div>

        <div class="used-parts">
          <h2>Использованные запчасти</h2>
          <table class="inventory-table">
            <thead>
              <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Цена за единицу</th>
              </tr>
            </thead>
            <tbody>
              <% parts.forEach(part => { %>
              <tr>
                <td><%= servis_parts.inventory_id %></td>
                <td><%= servis_parts.quantity_parts %></td>
                <td><%= servis_parts.total_price %> ₽</td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <div class="ordered-services">
          <h2>Услуги в заказе</h2>
          <table class="inventory-table">
            <thead>
              <tr>
                <th>Название услуги</th>
                <th>Количество</th>
                <th>Цена за единицу</th>
              </tr>
            </thead>
            <tbody>
              <% services.forEach(service => { %>
              <tr>
                <td><%= service.servis_name %></td>
                <td><%= service.quantity %></td>
                <td><%= service.servis_price %> ₽</td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </body>
</html>
